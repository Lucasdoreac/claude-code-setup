      "Bash(sed:*)",
      "Bash(pbpaste)",
      "Bash(osascript:*)",
      "Bash(defaults:*)",
      "Bash(launchctl:*)",
      "Bash(diskutil:*)",
      "Bash(tmutil:*)",
      "Bash(networksetup:*)",
      "Bash(security:*)",
      "Bash(caffeinate:*)",
      "Bash(screencapture:*)",
      "Bash(mdfind:*)",
      "Bash(mdls:*)",
      "Bash(qlmanage:*)",
      "Bash(plutil:*)",
      "Bash(pkgutil:*)",
      "Bash(softwareupdate:*)",
      "Bash(ditto:*)",
      "Bash(hdiutil:*)",
      "Bash(airport:*)",
      "Bash(system_profiler:*)",
      "Bash(crontab:*)",
      "Bash(~/bin/security-update:*)",
      "Bash(gem outdated:*)",
      "Bash(ruby --version:*)",
      "Bash(zsh -l -c 'echo $PATH | tr \"\"\"\":\"\"\"\" \"\"\"\"\\n\"\"\"\" | nl')",
      "Bash(zsh -l -c 'which ruby && ruby --version && which gem')",
      "Bash(zsh:*)",
      "Bash([ -f ~/.local/bin/env ])",
      "WebFetch(domain:blog.gitbutler.com)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(**/id_rsa)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/.ssh/*)",
      "Read(**/credentials.json)",
      "Read(**/config/database.yml)",
      "Read(**/.aws/credentials)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "memory"
  ],
  "outputStyle": "default",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/bin/block-dangerous-commands.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/bin/smart-format.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude finished!\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      }
    ]
  }
}
