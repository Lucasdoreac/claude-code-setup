      "Bash(rsync:*)",
      "Bash(pm2:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(diff:*)",
      "Bash(less:*)",
      "Bash(ls:*)",
      "Bash(which:*)",
      "Bash(touch:*)",
      "Bash(ln:*)",
      "Bash(chmod:*)",
      "Bash(echo:*)",
      "Bash(export:*)",
      "Bash(source:*)",
      "Bash(ps:*)",
      "Bash(kill:*)",
      "Bash(open:*)",
      "Bash(vite:*)",
      "Bash(webpack:*)",
      "Bash(turbo:*)",
      "Bash(nx:*)",
      "Bash(eslint:*)",
