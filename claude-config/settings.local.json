      "Bash(yarn:*)",
      "Bash(bun:*)",
      "Bash(jq:*)",
      "Bash(fzf:*)",
      "Bash(bat:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(exa:*)",
      "Bash(terraform:*)",
      "Bash(kubectl:*)",
      "Bash(helm:*)",
      "Bash(vercel:*)",
      "Bash(netlify:*)",
      "Bash(typedoc:*)",
      "Bash(storybook:*)",
      "Bash(htop:*)",
      "Bash(lsof:*)",
