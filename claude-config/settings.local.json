      "Bash(pbcopy)",
      "Bash(brew:*)",
      "Bash(docker:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:code.claude.com)",
      "mcp__memory__*",
      "mcp__context7__*",
      "mcp__chrome-devtools__*",
      "Write(**/*)",
      "NotebookEdit",
      "WebFetch(domain:docs.*)",
      "WebFetch(domain:*.readthedocs.io)",
      "Bash(npx:*)",
      "Bash(nvm:*)",
      "Bash(php:*)",
      "Bash(composer:*)",
